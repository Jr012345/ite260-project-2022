                                                System.out.println("Logged Out!");
                                                break;

                                            } else if (logout.equalsIgnoreCase("n")) {
                                                jerry+=2;
                                                break;


                                            } else { System.out.println("Invalid Input");}
						                 } else { System.out.println("Invalid input"); } 
						                 
						                 }
		 			                 
		 			                 
		 		               } else if (datenow.equalsIgnoreCase("B")){ 
		 		            	   
		 		            	  Scanner mon=new Scanner (System.in);
		 			               System.out.print("Enter a month\n>> ");
		 			               String month=mon.nextLine();
		 			                 
		 			              int deduction = 0;
					                 
					                 do {
					                	 Scanner input1 =new Scanner (System.in);
					                	 
					                	 try {
				                		 System.out.print("Check for absences: ");
					                	 deduction=input1.nextInt();
					                	 christian = false;
					                 
					                	 } catch (Exception e) {
					                		 System.out.println("Please enter a number, please try again.");
					                		 christian = true;
					                 
					                	 }
					                 
					                 
					                 } while (christian);
					                 
					                 
					                 int overtime = 0;
					                 do {
					                	 Scanner input1=new Scanner (System.in);
					                	 
					                	 try {
					                	 System.out.print("Check for overtime: ");
					                	 overtime=input1.nextInt();
					                	 christian = false;
					                 
					                	 } catch (Exception e) {
					                		 System.out.println("Please enter a number, please try again.");
					                		 christian = true;
					                 
					                	 }
					                 
					                 
					                 } while (christian);
					                 
					                 
					                 
					                 int holidays = 0;
					                 do {
					                	 Scanner input1=new Scanner (System.in);
					                	 
					                	 try {
					                	 System.out.print("Check for holidays: ");
					                	 holidays=input1.nextInt();
					                	 christian = false;
					                 
					                	 } catch (Exception e) {
					                		 System.out.println("Please enter a number, please try again.");
					                		 christian = true;
					                 
					                	 }
					                 
					                 
					                 } while (christian);
					                 
					                 
					                 
					                 
					                 int withleave=0;
					                 do {
					                	 Scanner input1=new Scanner (System.in);
					                	 
					                	 try {
					                	 System.out.print("Check for leave with pay: ");
					                	 withleave=input1.nextInt();
					                	 christian = false;
					                 
					                	 } catch (Exception e) {
					                		 System.out.println("Please enter a number, please try again.");
					                		 christian = true;
					                 
					                	 }
					                 
					                 
					                 } while (christian);
		 			               
		 			               
		 			                 int m=13;
		 			                 int daily=200;
		 			                 int a=daily*holidays;
                                      int j=a*2;
		 			                 int b=daily*overtime;
		 			                 int c=daily*withleave;
		 			                 int d=m-deduction;
		 			                 int y=daily*d;
		 			                 int e=daily*deduction;
		 			                 int f=a+b+c;
		 			                 int gross=a+b+c+daily*m;
		 			                 int netpay=a+b+c+y;
		 			                 int g=netpay-incentives[12]-incentives[13];
		 			                 int h=e+incentives[12]+incentives[13];
		 			                 LocalDate dateObject;
		 			                 dateObject = LocalDate.now(); 
		 			                 System.out.println("\nPeriod: 2nd period\t\t\tDate Today: "+dateObject+"\nMonth: "+month+"\nName: "+employee[9]
		 			                         + "\t\t\tPosition: "+Jobposition[9]
		 			                         +"\n\t\t\t\t\tRate perday: "+daily+"\n\n\t\tPAY SLIP"
		 			                         +"\n____________________________________________________________________\nDeductions\n\nAbsences:\t\t\t"+e+""
		 			                         +"\n"+sssphilhealth[0]+"\t\t\t\t"+incentives[12]+"\n"+sssphilhealth[1]
		 			                         +"\t\t\t"+incentives[13]+"\n____________________________________________________________________\nTotal deduction:\t\t"+h
		 			                         +"\n\nOvertime:\t\t\t"+b+"\nDouble pay:\t\t\t"+j+"\nLeave w/ pay:\t\t\t"+c
		 			                         +"\n____________________________________________________________________\nTotal:\t\t\t\t"+f
		 			                 +"\n\nGross Pay:\t"+gross+"\n\nNet Pay:\t"+g);
		 			                 
		 			                Scanner select=new Scanner (System.in);
		 			                System.out.println("Would you like to select another employee? Y/N ");
		 			                while (true) {
						                 System.out.print("  > ");
						                 String selecta=select.nextLine();
						                 
						                 if (selecta.equalsIgnoreCase("y")) {
						                	 jerry+=2;
				 		                      break;
						                 } else if (selecta.equalsIgnoreCase("n")) {
                                            Scanner chris=new Scanner (System.in);
                                            System.out.print("Do you Want To Log Out Y/N?"); 
                                            String  logout = chris.nextLine();   

						                	if (logout.equalsIgnoreCase("y")){
                                                jerry+=4;
                                                System.out.println("Logged Out!");
                                                break;

                                            } else if (logout.equalsIgnoreCase("n")) {
                                                jerry+=2;
                                                break;


                                            } else { System.out.println("Invalid Input");}

                                            
                                        
						                 } else { System.out.println("Invalid input"); } 
						                 
						                 }
		 		            	   
		 		            	   
		 		               } else { System.out.println("Invalid Input"); }
		 		                
		 		                
		 		                
		 		                
		 		               if (jerry >= 1) {jerry--; break;}
						   		  }		
		   		             		
		   		             		
		   		             		
		   		             		
		   		             		
		             		
		   		             	} else { System.out.println("Invalid input, please try again"); }
		   		             		
		   		             		
		   		             		
		   		             		
		   		             		
		   		             		
	        		        if (jerry >= 1) {jerry--; break;}
		             		}	
	        		 
         		if (jerry >= 1) {jerry--; break;}
	        	 }
	        	 
	        	 
	        	 
	         } else { System.out.println("Invalid username or password, please try again"); }

	    if (jerry >= 1) {jerry--;;}
		}
	}

